<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LiveMarkdown.Controls;assembly=LiveMarkdown"
        xmlns:edit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        xmlns:math="clr-namespace:AvaloniaMath.Controls;assembly=AvaloniaMath">

	<!-- ========================================================= -->
	<!-- Template dla MarkdownView                                 -->
	<!-- ========================================================= -->
	<Style Selector="local|MarkdownView">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:MarkdownView">
					<Border
						Padding="8"
						Background="Transparent">
						<ScrollViewer>
							<!-- tu lądują wszystkie wygenerowane kontrolki -->
							<StackPanel x:Name="PART_ContentHost"
										Orientation="Vertical"
										Spacing="4" />
						</ScrollViewer>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


	<!-- ========================================================= -->
	<!-- Nagłówki                                                   -->
	<!-- (w C#: tb.Classes.Add("md-heading-1" | "md-heading-2"...)  -->
	<!-- ========================================================= -->

	<Style Selector="TextBlock.md-heading-1">
		<Setter Property="FontSize" Value="28" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Margin" Value="0,16,0,8" />
	</Style>

	<Style Selector="TextBlock.md-heading-2">
		<Setter Property="FontSize" Value="24" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Margin" Value="0,12,0,6" />
	</Style>

	<Style Selector="TextBlock.md-heading-3">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Margin" Value="0,10,0,4" />
	</Style>

	<Style Selector="TextBlock.md-heading-4">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="Margin" Value="0,8,0,4" />
	</Style>

	<!-- fallback dla headingów 5/6, jeśli też dajesz klasę -->
	<Style Selector="TextBlock.md-heading-5">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="Margin" Value="0,6,0,4" />
	</Style>


	<!-- ========================================================= -->
	<!-- Zwykłe paragrafy                                           -->
	<!-- (w C#: tb.Classes.Add("md-paragraph"))                     -->
	<!-- ========================================================= -->

	<Style Selector="TextBlock.md-paragraph">
		<Setter Property="TextWrapping" Value="Wrap" />
		<Setter Property="Margin" Value="0,4,0,12" />
		<!-- możesz tu dodać Foreground, LineHeight itd. -->
	</Style>


	<!-- ========================================================= -->
	<!-- Cytaty                                                     -->
	<!-- (w C#: border.Classes.Add("md-quote"))                     -->
	<!-- ========================================================= -->

	<Style Selector="Border.md-quote">
		<Setter Property="Background" Value="#20FFFFFF" />
		<Setter Property="BorderThickness" Value="3,0,0,0" />
		<Setter Property="BorderBrush" Value="Gray" />
		<Setter Property="Padding" Value="8,4,4,4" />
		<Setter Property="Margin" Value="0,4,0,12" />
	</Style>


	<!-- ========================================================= -->
	<!-- Linie poziome (HR)                                        -->
	<!-- (w C#: border.Classes.Add("md-hr"))                        -->
	<!-- ========================================================= -->

	<Style Selector="Border.md-hr">
		<Setter Property="BorderBrush" Value="Gray" />
		<Setter Property="BorderThickness" Value="0,0.5,0,0" />
		<Setter Property="Margin" Value="0,8,0,8" />
	</Style>


	<!-- ========================================================= -->
	<!-- Tabele                                                     -->
	<!-- (w C#: grid.Classes.Add("md-table");                       -->
	<!--     cellBorder.Classes.Add("md-table-header" / "md-table-cell")) -->
	<!-- ========================================================= -->

	<Style Selector="Grid.md-table">
		<Setter Property="Margin" Value="0,4,0,12" />
	</Style>

	<Style Selector="Border.md-table-header">
		<Setter Property="BorderBrush" Value="Gray" />
		<Setter Property="BorderThickness" Value="0.5" />
		<Setter Property="Background" Value="#40FFFFFF" />
		<Setter Property="Padding" Value="4" />
	</Style>

	<Style Selector="Border.md-table-cell">
		<Setter Property="BorderBrush" Value="Gray" />
		<Setter Property="BorderThickness" Value="0.5" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Padding" Value="4" />
	</Style>


	<!-- ========================================================= -->
	<!-- Task list (checkboxy)                                     -->
	<!-- (w C#: Run.Classes.Add("md-task-checkbox"))                -->
	<!-- ========================================================= -->

	<Style Selector="Run.md-task-checkbox">
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>


	<!-- ========================================================= -->
	<!-- Bloki LaTeX (FormulaBlock)                                -->
	<!-- (w C#: formula.Classes.Add("md-math-block"))              -->
	<!-- ========================================================= -->

	<Style Selector="math|FormulaBlock.md-math-block">
		<Setter Property="FontSize" Value="24" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="Margin" Value="0,8,0,12" />
		<!-- można dodać np. tło dla wzorów -->
	</Style>


	<!-- ========================================================= -->
	<!-- Inline LaTeX (FormulaBlock w InlineUIContainer)           -->
	<!-- (w C#: formula.Classes.Add("md-math-inline"))             -->
	<!-- ========================================================= -->

	<Style Selector="math|FormulaBlock.md-math-inline">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="Margin" Value="0,0,0,0" />
	</Style>


	<!-- ========================================================= -->
	<!-- Bloki kodu – AvaloniaEdit.TextEditor                      -->
	<!-- (w C#: editor.Classes.Add("md-code-block"))               -->
	<!-- ========================================================= -->

	<Style Selector="edit|TextEditor.md-code-block">
		<Setter Property="Foreground" Value="White" />
		<Setter Property="Background" Value="#303030" />
		<Setter Property="FontFamily" Value="Consolas, Courier New, monospace" />
		<Setter Property="FontSize" Value="13" />
	</Style>

	<!-- Opcjonalnie: kontener Border dla bloku kodu               -->
	<!-- (w C#: border.Classes.Add("md-code-container"))           -->
	<Style Selector="Border.md-code-container">
		<Setter Property="Background" Value="#404040" />
		<Setter Property="CornerRadius" Value="4" />
		<Setter Property="Padding" Value="4" />
		<Setter Property="Margin" Value="0,4,0,12" />
	</Style>


	<!-- ========================================================= -->
	<!-- Linki inline (Button + TextBlock)                         -->
	<!-- (w C#: button.Classes.Add("md-link-button"),              -->
	<!--      textBlock.Classes.Add("md-link-text"))               -->
	<!-- ========================================================= -->

	<Style Selector="Button.md-link">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="Cursor" Value="Hand" />
		<Setter Property="FocusAdorner" Value="{x:Null}" /> <!-- opcjonalne: nie pokazuje domyślnego focusa, jeśli nie chcesz -->
	</Style>


	<Style Selector="TextBlock.md-link-text">
		<Setter Property="Foreground" Value="DeepSkyBlue" />
		<Setter Property="TextDecorations" Value="Underline" />
		<Setter Property="Padding" Value="0" />
	</Style>

</Styles>
